<h2>乗降するバス停を選択してください</h2>

<%= form_with(model: @bus_stop, url: "/search", method: :get) do |f| %>
    <table>
        <thead>
            <tr>
                <th>
                    <%= f.label :title, "乗車" %>
                </th>
                <th>
                    <%= f.label :title, "降車" %>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <%= f.select :get_on, @bus_stop.map{|b| [b.name, b.name]}, include_blank: "選択して下さい" %>
                </td>
                <td>
                    <%= f.select :get_off, @bus_stop.map{|b| [b.name, b.name]}, include_blank: "選択して下さい" %>
                </td>
            </tr>
        </tbody>
    </table>
    <%= f.submit "検索" %>
<% end %>

<% if %>
    <%= render "caluculation_result" %>
<% else %>
    <%= render "both_are_not_entered" %>
<% end %>
